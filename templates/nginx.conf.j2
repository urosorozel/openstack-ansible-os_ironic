user {{ ironic_system_user_name }};
worker_processes 2;
pid /run/nginx.pid;

events {
    worker_connections 768;
    # multi_accept on;
}

http {

    ##
    # Basic Settings
    ##

    sendfile on;
    tcp_nopush on;
    tcp_nodelay on;
    keepalive_timeout 65;
    types_hash_max_size 2048;
    # server_tokens off;

    # server_names_hash_bucket_size 64;
    # server_name_in_redirect off;

    include /etc/nginx/mime.types;
    default_type application/octet-stream;

    ##
    # Logging Settings
    ##

    access_log {{ ironic_nginx_log_dir }}/httpboot-access.log;
    error_log {{ ironic_nginx_log_dir }}/httpboot-error.log;

    ##
    # Gzip Settings
    ##

    gzip on;

    server {
        listen {{ ironic_nginx_port }};
        server_name {{ ansible_hostname }};
        root {{ ironic_httpboot_image_dir }};
                location / {
                        index index.html;
                }
        location {{ ironic_httpboot_image_dir }}/ {
            alias {{ ironic_httpboot_image_dir }}/;
        }
    }
}
